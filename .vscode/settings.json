{
  "ltex.language": "de-CH",
  "latex-workshop.latex.outDir": "%TMPDIR%",
  "latex-workshop.rootDir": "${workspaceFolder}/src",
  "latex-workshop.latex.rootFile": "index.tex",
  "latex-workshop.latex.recipe.default": "tectonic",
  "latex-workshop.latex.recipes": [
    {
      "name": "tectonic",
      "tools": [
        "tectonic"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "tectonic",
      "command": "tectonic",
      "args": [
        "-X",
        "build"
      ],
      "env": {
        "PATH": "/opt/homebrew/bin:/usr/local/bin:/Library/TeX/texbin:${env:PATH}"
      }
    }
  ]
}